BoxLayout:
    orientation:'vertical'
    BoxLayout:
        orientation:'horizontal'
        TextInput:
            id: input_number
            text: ''
            font_size: 48
            multiline: False
        Button:
            text: 'Square'
            font_size: 48
            # the following line specifies the function in the app class to call when the button is pressed
            on_press: app.handle_calculate(int(input_number.text))
            #as you can see in params it takes input_number which is the id of the TextInput above typecasts
            # to int and then sends it through
        Label:
            id: output_label
            text: ''
            font_size: 48
            color: (1, 0.75294117647, 0.79607843137, 1)
    Label:
        text: 'Enter a number and press "Square"'
        multiline: True
        font_size: 20
        color: (0, 1, 1, 1)
