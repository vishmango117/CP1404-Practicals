BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            text: ''
            id: user_input
            multiline: False
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                id: up_button
                text: 'Up'
                on_press: app.handle_changes(1)
            Button:
                id: down_button
                text: 'Down'
                on_press: app.handle_changes(-1)
            
    Button:
        id: C_to_F_button
        text: 'Convert C to F'
        on_press: app.handle_celsius_to_fahrenheit(int(user_input.text))
    Button:
        id: F_to_C_button
        text: 'Convert F to C'
        on_press: app.handle_fahrenheit_to_celsius(int(user_input.text))
    Label:
        id: converted_output
        text: ''
        font_size: 20
        color6: (0.5, 0.5, 1,1)
    