BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        Button:
            font_size: 30
            size_hint_x: 0.25
            id: clear-button
            text: 'Clear'
            on_press: app.handle_clear()
        TextInput:
            font_size: 30
            id: name_input
            text: ''
    BoxLayout:
        orientation: 'horizontal'
        Button:
            font_size: 30
            size_hint_x: 0.25
            id: greet-button
            text: 'Greet'
            on_press: app.handle_greet(name_input.text)
        Label:
            font_size: 30
            id: output_label
            text: ''
            color: (1,1,0,1)